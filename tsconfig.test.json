{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "noEmitHelpers": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true //Allows loaders to be chained to awesome-typescript-loader.
    }
}